</body>

<script>
    var data = <%- JSON.stringify(data) %>;
    console.log('here')
    data.rows.forEach(row => {
        
        table += `<tr>
            <th scope="col">${row.nh_id}</th>
            <th scope="col">${row.length}</th>
            <th scope="col">${row.city_name}</th>
            <th scope="col">${row.year}</th>
            <th scope="col">${row.status}</th>      
            </tr>`
        });
        document.querySelector('.table').innerHTML += table
        var table = ``;
</script>
